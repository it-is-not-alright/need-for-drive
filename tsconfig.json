{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "target": "ES6",
    "module": "ES2020",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "~/api/*": ["src/api/*"],
      "~/assets/*": ["src/assets/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/convert/*": ["src/convert/*"],
      "~/store/*": ["src/store/*"],
      "~/components/*": ["src/components/*"]
    }
  }
}
